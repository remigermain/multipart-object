{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/types",

    },
    "include": [
        "src/**/*",
        "types/**/*",
    ],
    "exclude": [
        "test/**/*",
        "dist/**/*"
    ]
}