{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/@types",
        "rootDir": "./src",

    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "dist/**/*", "node_modules/**/*", "test/**/*"
    ]
}